<div class="sections delete">
  <h2>Delete Section</h2>

  <!-- Specify the action and the id to be deleted -->
  <%= form_for(:section, :url => {:action => "destroy", :id => @section.id}) do |f| %>
  <p>Are you sure you want to permanently delete this page?</p>

  <p class="reference-name"><%= @section.name %></p>

  <div class="form-button">
    <%= submit_tag("Delete Section")%>
  </div>
  <% end %>
</div>
