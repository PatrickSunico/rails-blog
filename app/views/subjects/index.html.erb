
<!-- if the flash notice is not blank, then out the div and the notice -->

<% @page_title = "Subjects" %>
<div class="subjects index">
  <h2>Subjects</h2>

  <!-- specify the route and class action to show the form to create a new subject -->
  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add new Subject", {:action => 'new'}, :class => 'action new') %>
  <!-- counts all of the current pages -->
  <!-- pluralize(size of n, 'singular fallback name if n = 1') -->
  <div><%= pluralize(@subjects.size, 'subject') %> found </div>
  <table class="listing" summary = "Subject list">
    <tr class="header">
      <th>Id</th>
      <th>Subject</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
  <!-- do an for each to display the subject in a row like fashion -->
  <!-- @subjects the instance variable we defined in our controller -->
  <% @subjects.each do |subject| %>
  <tr class="<%=cycle('odd','even')%>"> <!--cycle through each td odd or even td.times-->
    <td><%= subject.id%></td>
    <td><%= subject.name %></td>
    <td><%= subject.position %></td>


    <td class="center"><%= status_tag(subject.visible) %></td>

    <!-- defines the number of subjects in the pages table -->
    <td class="center"><%= subject.pages.size %></td>
    <td class="actions">
      <!-- specify the route and class action to show an corresponding record from the db -->
      <%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show')%>

      <!-- specify the route and class action to edit a corresponding record from the db -->
      <%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit')%>

      <%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete')%>
    </td>
  </tr>
  <% end %>
  </table>
</div>
