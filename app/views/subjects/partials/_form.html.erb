<!-- This will render the error_message that we defined as a error partial that will be called by our custom helper error_messages_for(including the object we want to pass) -->
<%= error_messages_for(@subject) %>
<table summary= "Subject form fields">
  <tr>
    <th><%= f.label(:name, 'Subject Name')%></th>
    <td><%= f.text_field(:name)%></td>
  </tr>

  <tr>
    <th><%= f.label(:position)%></th>
    <td><%= f.select(:position, 1..@subject_count, :include_blank => true)%></td>
  </tr>

  <tr>
    <th><%= f.label(:visible)%></th>
    <td><%= f.check_box(:visible)%></td>
  </tr>

  <tr>
    <th><%= f.label(:created_at)%></th>
    <td><%= f.datetime_select(:created_at, order: [:day, :month, :year], :discard_minute => true, :discard_hour => true, :include_blank => true)%></td>
  </tr>
</table>
