<%= link_to("<< Back to List", {:action => "index"}, :class => "back-link") %>

<div class="Pages edit">
  <h2>Update Page</h2>

  <!-- Specify the action and the id to be updated at -->
  <%= form_for(:page, :url => {:action => "update", :id => @page.id}) do |f| %>
    <%= render(:partial => "pages/partials/form", :locals => {:f => f}) %>
    <div class="form-buttons">
      <%= submit_tag("Update Page")%>
    </div>

  <% end %>
</div>
