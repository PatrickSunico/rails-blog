<%= link_to("<< Back to List", {:action => "index"}, :class => "back-link") %>

<div class="Pages edit">
  <h2>Update Page</h2>

  <!-- Specify the action and the id to be updated at -->
  <%= form_for(:page, :url => {:action => "update", :id => @page.id}) do |f| %>

    <table summary="Subject form fields">
      <tr>
        <th>Page Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>

      <tr>
        <th>Page Name</th>
        <td><%= f.text_field(:permalink) %></td>
      </tr>

      <tr>
        <th>Page Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>

      <tr>
        <th>Page Visible?</th>
        <td><%= f.text_field(:visible)%></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Page")%>
    </div>

  <% end %>
</div>
